{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File with Input File",
            "type": "debugpy", 
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "INPUT_FILE": "${input:inputFilePath}"
            }
        }
    ],
    "inputs": [
        {
            "id": "inputFilePath",
            "type": "promptString",
            "description": "Path to the input file",
        }
    ]
}